{
    "compilerOptions": {
        "allowJs": false,
        "checkJs": false,
        "rootDir": "./",
        "outDir": "./build",
        "target": "ES6",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "declaration": true,
        "declarationDir": "./build",
        "types": ["node"]
    },
    "include": [
        "kernel/**/*",
        "src/plugins/**/*",
        "crafters/**/*",
        "src/types/**/*",
        "./**/*"
    ],
    "exclude": ["node_modules", "test", "build", "galadriel.config.ts", "index.ts"]
}
