{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "rootDir": "./",
        "outDir": "./dist/builds",
        "target": "ES6",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "declaration": true,
        "types": ["node"]
    },
    "include": ["tools/**/*", "types/**/*", "toolkit/**/*", "index.ts"],
    "exclude": ["node_modules", "dist", "tools/index.js"]
}
