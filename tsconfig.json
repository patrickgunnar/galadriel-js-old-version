{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "rootDir": "./",
        "outDir": "./dist",
        "target": "ES6",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "declaration": true,
        "declarationDir": "./dist",
        "types": ["node", "jest"]
    },
    "include": [
        "PatterniaHub/**/*",
        "plugins/**/*",
        "StyleCrafters/**/*",
        "types/**/*",
        "./**/*"
    ],
    "exclude": ["node_modules", "dist", "Watchmanor", "test"]
}
